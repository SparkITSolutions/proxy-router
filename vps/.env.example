# VPS Node Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# REQUIRED: NordVPN Credentials
# ==============================================================================
# Get your token from: https://my.nordaccount.com/dashboard/nordvpn/access-tokens/
NORDVPN_TOKEN=your_nordvpn_token_here

# ==============================================================================
# NordVPN Settings
# ==============================================================================
# Region to connect to (e.g., us, uk, de, nl, etc.)
NORDVPN_REGION=us

# VPN technology: nordlynx (WireGuard, recommended) or openvpn
NORDVPN_TECHNOLOGY=nordlynx

# Specific server (optional, leave empty for auto-selection within region)
# Example: us1234, de567, etc.
NORDVPN_SERVER=

# Server rotation interval in seconds (0 to disable, 3600 = 1 hour)
ROTATION_INTERVAL=3600

# DNS servers (default: NordVPN's DNS)
DNS_SERVERS=103.86.96.100,103.86.99.100

# ==============================================================================
# WireGuard Server Settings
# ==============================================================================
# Your VPS public IP (or "auto" to detect)
VPS_PUBLIC_IP=auto

# WireGuard listen port
WG_PORT=51820

# WireGuard peers (comma-separated names for config generation)
WG_PEERS=gateway

# WireGuard internal subnet
WG_SUBNET=10.100.0.0

# Allowed IPs for peers (default: route all traffic)
WG_ALLOWED_IPS=0.0.0.0/0

# DNS for WireGuard peers
PEERDNS=103.86.96.100,103.86.99.100

# ==============================================================================
# SSH/Security Settings (used by install.sh)
# ==============================================================================
# SSH port (should match what you set during VPS hardening)
SSH_PORT=32222

# Disable root login (yes/no) - set to yes after creating a non-root user with SSH key access
DISABLE_ROOT_LOGIN=no

# Disable password authentication (yes/no) - only set to yes if you have SSH keys
DISABLE_PASSWORD_AUTH=no

# ==============================================================================
# API Settings
# ==============================================================================
# Bearer token for API authentication (generate a strong random string)
API_TOKEN=changeme_to_a_secure_random_string

# ==============================================================================
# General Settings
# ==============================================================================
# Timezone
TZ=UTC
